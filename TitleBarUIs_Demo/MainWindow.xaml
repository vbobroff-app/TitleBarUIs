                                     Shift="-5"
                                     Padding="0,5"
                                     ContentAlignment="Left"
                                     Margin="-2,0,0,0"
                                     AutoScalePath="True">
                    <vtb:VectorTextBlock.TextPath>
                        <PathGeometry Figures="M 0 50 Q 25 60 50 50 Q 75 40 100 50 M 100 50 Z" />
